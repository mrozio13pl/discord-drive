{
    "name": "discorddrive",
    "version": "0.0.0",
    "description": "Self-hosted unlimited file storage using Discord.",
    "type": "module",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "build": "rollup -c && npm run unocss -- -m",
        "dev": "concurrently -n \"server,client\" --prefixColors gray \"cross-env NODE_ENV=development nodemon -e js,ts --watch src --exec \\\"tsx src/index.ts\\\"\" \"nodemon -e js,ts,jsx,tsx,css --watch client --exec \\\"npm run dev:client\\\"\"",
        "dev:client": "\"rollup -c rollup.config.client.js\" && npm run unocss",
        "unocss": "unocss public/client.js -o public/styles.css",
        "start": "node ."
    },
    "author": "mrozio13pl",
    "license": "MIT",
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "@fastify/busboy": "^3.0.0",
        "@fontsource-variable/nunito-sans": "^5.1.0",
        "clsx": "^2.1.1",
        "cookie": "^1.0.1",
        "copy-text-to-clipboard": "^3.2.0",
        "discord.js": "^14.16.3",
        "dotenv": "^16.4.5",
        "find-my-way": "^9.1.0",
        "ky": "^1.7.2",
        "level": "^8.0.1",
        "linguist-languages": "^7.27.0",
        "lucide-preact": "^0.454.0",
        "mrmime": "^2.0.0",
        "preact": "^10.24.3",
        "pretty-bytes": "^6.1.1",
        "react": "npm:@preact/compat",
        "react-dom": "npm:@preact/compat",
        "react-hot-toast": "^2.4.1",
        "sirv": "^3.0.0",
        "tiny-typed-emitter": "^2.1.0",
        "tinydate": "^1.3.0",
        "uid": "^2.0.2",
        "unique-username-generator": "^1.3.0",
        "url-join": "^5.0.0",
        "wouter-preact": "^3.3.5",
        "ws": "^8.18.0",
        "zustand": "5.0.1"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.1",
        "@rollup/plugin-esm-shim": "^0.1.7",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.3.0",
        "@rollup/plugin-sucrase": "^5.0.2",
        "@tsconfig/node18": "^18.2.4",
        "@types/node": "^22.9.0",
        "@types/react": "^18.3.12",
        "@types/react-dom": "18.3.1",
        "@types/ws": "^8.5.13",
        "@unocss/cli": "^0.64.0",
        "@unocss/reset": "^0.64.0",
        "@zkochan/rimraf": "^3.0.2",
        "colorette": "^2.0.20",
        "concurrently": "^9.1.0",
        "cross-env": "^7.0.3",
        "nodemon": "^3.1.7",
        "rollup": "^4.24.4",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-esbuild": "^6.1.1",
        "rollup-plugin-output-size": "^1.4.2",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-typescript2": "^0.36.0",
        "std-env": "^3.7.0",
        "tsx": "^4.19.2",
        "type-fest": "^4.26.1",
        "typescript": "^5.6.3",
        "unocss": "^0.64.0",
        "unocss-preset-daisy": "^7.0.0"
    }
}
